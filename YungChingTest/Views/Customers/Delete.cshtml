@model Models.Customers

@{
    ViewData["Title"] = "Delete Customer";
}

<h2>Delete Customer</h2>

<form method="get" asp-action="SearchForDelete">
    <div class="form-group">
        <label for="searchCustomerID" class="control-label">Search by Customer ID</label>
        <input type="text" name="customerID" id="searchCustomerID" class="form-control" placeholder="Enter Customer ID" />
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-secondary">Search</button>
    </div>
</form>

@if (ViewBag.Customer != null)
{
    <div class="alert alert-warning">
        <strong>Warning!</strong> Are you sure you want to delete the following customer?
    </div>
    <form method="post" asp-action="DeleteConfirmed">
        <div class="form-group">
            <label asp-for="CustomerID" class="control-label">Customer ID</label>
            <input asp-for="CustomerID" class="form-control" value="@ViewBag.Customer.CustomerID" readonly />
        </div>
        <div class="form-group">
            <label asp-for="CompanyName" class="control-label">Company Name</label>
            <input asp-for="CompanyName" class="form-control" value="@ViewBag.Customer.CompanyName" readonly />
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-danger">Delete Customer</button>
        </div>
    </form>
}
else if (ViewBag.SearchPerformed != null && ViewBag.SearchPerformed)
{
    <div class="alert alert-danger">No customer found with the provided CustomerID.</div>
}